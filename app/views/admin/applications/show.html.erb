<h1><%= @application.name %></h1>
<h3><%= "Address: #{@application.address}, #{@application.city} #{@application.state}, #{@application.zip}" %></h3>
<h3><%= "Reason For Applying: #{@application.description}" %></h3>

<h3>Dogs Applied For: </h3>
<div class="pets">
  <% @pet_applications.each do |pet_app| %>
    <p><%= link_to "#{pet_app.pet.name}", "/pets/#{pet_app.pet.id}" %></p>
    <% if @pet_application.status == "In Progress" %>
      <%= form_with url: "/pet_applications/update", method: :patch, local: true do |f| %>
        <%= f.hidden_field :status, :value => "Accept"%>
        <%= f.submit "Accept" %>
      <% end %>

      <%= form_with url: "/pet_applications/update", method: :patch, local: true do |f| %>
        <%= f.hidden_field :status, :value => "Reject"%>
        <%= f.submit "Reject" %>
      <% end %>
    <% end %>



  <% end %>
</div>
